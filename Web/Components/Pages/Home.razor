@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<ul>
    
@foreach (Game game in Lobby.Games)
{ <li>
 @game.Name - Players: @game.NumOfPlayers
</li>
   
}

</ul>
New Game Name: <input @bind= nameInput placeholder="Type Game Name">
<button> @onclick=CreateGame Create Game</button>

@code {
    string nameInput="";
    


    void CreateGame()
    {
        Game newgame= new Game();
        newGame.Name= nameInput;
        newGame.NumOfPlayers=0;
        Lobby.Games.add();
        Lobby.GameListChanged?.Invoke();
    }
    void Refresh()
    {
        InvokeAsync(StateHasChanged);
    }
}
